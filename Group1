using System;

class Bank1
{
    public string Name { get; private set; }
    public int Age { get; private set; }
    public string Email { get; private set; }
    public string Password { get; private set; }

    public Bank1()
    {
        Console.WriteLine("Welcome to our bank! Please provide the following details to create your account:");

        Console.Write("Name: ");
        Name = Console.ReadLine();

        bool validAge = false;
        while (!validAge)
        {
            Console.Write("Age: ");
            string ageInput = Console.ReadLine();
            if (int.TryParse(ageInput, out int age))
            {
                Age = age;
                validAge = true;
            }
            else
            {
                Console.WriteLine("Please enter a valid age (a whole number).");
            }
        }

        Console.Write("Email: ");
        Email = Console.ReadLine();

        Console.Write("Password: ");
        Password = Console.ReadLine();
    }

    public void DisplayAccountInfo()
    {
        Console.WriteLine("\nAccount Information:");
        Console.WriteLine($"Name: {Name}");
        Console.WriteLine($"Age: {Age}");
        Console.WriteLine($"Email: {Email}");
        // You generally wouldn't want to display the password, but for demonstration purposes:
        Console.WriteLine($"Password: {Password}");
    }
}

class LoginManager
{
    private string expectedEmail;
    private string expectedPassword;
    private int loginAttempts = 0;
    private const int maxAttempts = 3;

    public LoginManager(string email, string password)
    {
        expectedEmail = email;
        expectedPassword = password;
    }

    public bool Login()
    {
        while (loginAttempts < maxAttempts)
        {
            Console.WriteLine("Please log in:");
            Console.Write("Email: ");
            string emailInput = Console.ReadLine();
            Console.Write("Password: ");
            string passwordInput = Console.ReadLine();

            if (emailInput == expectedEmail && passwordInput == expectedPassword)
            {
                Console.WriteLine("Login successful!");
                return true;
            }
            else
            {
                Console.WriteLine("Invalid email or password. Please try again.");
                loginAttempts++;
            }
        }

        Console.WriteLine("You have exceeded the maximum number of login attempts.");
        return false;
    }
}

class Program
{
    static void Main(string[] args)
    {
        Bank1 bankAccount = new Bank1();
        bankAccount.DisplayAccountInfo();

        LoginManager loginManager = new LoginManager(bankAccount.Email, bankAccount.Password);

        bool loggedIn = loginManager.Login();
        if (loggedIn)
        {
            // Proceed with whatever you need to do after successful login
        }
        else
        {
            // Handle case when login fails (e.g., exit program or display appropriate message)
        }
    }
}
